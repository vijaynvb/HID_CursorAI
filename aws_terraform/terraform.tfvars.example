# Example Terraform variables file
# Copy this file to terraform.tfvars and update with your values

project_name = "serverless-web-app"
region       = "us-east-1"
environment  = "dev"

# Cognito Configuration
cognito_user_pool_name       = "web-app-user-pool"
cognito_user_pool_client_name = "web-app-client"

# Amplify Configuration
amplify_app_name    = "web-app"
amplify_repository  = "https://github.com/your-username/your-repo.git"
amplify_branch_name = "main"

# Lambda Configuration
lambda_function_name = "appsync-resolver"
lambda_runtime       = "python3.11"
lambda_handler       = "index.handler"
lambda_zip_path      = "lambda_function.zip"

# AppSync Configuration
appsync_api_name   = "web-app-api"
appsync_schema_file = "schema.graphql"

# DynamoDB Configuration
dynamodb_table_name   = "app-data"
dynamodb_hash_key     = "id"
dynamodb_billing_mode = "PAY_PER_REQUEST"

# If using PROVISIONED billing mode, uncomment and set these:
# dynamodb_read_capacity  = 5
# dynamodb_write_capacity = 5

# Tags
tags = {
  Project     = "ServerlessWebApp"
  Environment = "dev"
  ManagedBy   = "Terraform"
  Owner       = "YourTeam"
}
